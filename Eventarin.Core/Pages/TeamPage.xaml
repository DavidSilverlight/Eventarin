			                      		<Label TextColor="Black"   Font="16" Text="Carlos Macias" />
			                      		<Label TextColor="Black"   Font="16" Text="Mobile Developmer" />
			                 	  </StackLayout>
			    	         </StackLayout>

			       		     <StackLayout  Orientation="Horizontal" VerticalOptions="CenterAndExpand" Padding="10,0,0,20"  >
