			                      		<Label TextColor="Black"   Font="16" Text="Mir Maheed" />
			                      		<Label TextColor="Black"   Font="16" Text="Project Management, Development" />
			                 	  </StackLayout>
		            		</StackLayout>



		            		<StackLayout  Orientation="Horizontal" VerticalOptions="CenterAndExpand" Padding="10,0,0,20" >
