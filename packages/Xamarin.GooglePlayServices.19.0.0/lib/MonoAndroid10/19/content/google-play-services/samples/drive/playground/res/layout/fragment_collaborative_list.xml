<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:text="@string/collab_list_descr"
        android:padding="5dp"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:text="@string/collab_list_edit"
        android:textStyle="bold"
        android:padding="5dp"/>
    <ListView
        android:id="@+id/items_list"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:fastScrollEnabled="false"></ListView>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:orientation="horizontal">
        <Button
            android:id="@+id/add_item_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:text="@string/list_add"/>
        <EditText
            android:id="@+id/add_item_edit_text"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move item to index"
            android:id="@+id/move_button"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/new_index_edit_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:orientation="horizontal">
        <Button
            android:id="@+id/set_item_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/list_set"/>
        <EditText
            android:id="@+id/set_item_edit_text"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:maxLines="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/remove_item_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:text="@string/list_remove"/>

        <Button
            android:id="@+id/clear_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:text="@string/list_clear"/>
    </LinearLayout>

</LinearLayout>
